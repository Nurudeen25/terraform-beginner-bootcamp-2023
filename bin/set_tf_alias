#!/bin/bash

# Define the alias command
alias_command='alias tf="terraform"'

# Check if .bash_profile exists and is writable
if [ -w ~/.bash_profile ]; then
  # Check if the alias already exists in .bash_profile
  if ! grep -q "$alias_command" ~/.bash_profile; then
    # Add the alias to .bash_profile
    echo "$alias_command" >> ~/.bash_profile
    echo "Alias 'tf' for 'terraform' has been added to ~/.bash_profile."
  else
    echo "Alias 'tf' for 'terraform' already exists in ~/.bash_profile."
  fi
else
  echo "Error: ~/.bash_profile does not exist or is not writable."
fi
